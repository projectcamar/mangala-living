{
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.mangalaliving.com"
        }
      ],
      "destination": "https://mangalaliving.com/:path*",
      "permanent": true
    },
    {
      "source": "/id/:path*",
      "destination": "/:path*?lang=id",
      "permanent": true
    },
    {
      "source": "/eng/:path*",
      "destination": "/:path*?lang=en",
      "permanent": true
    },
    {
      "source": "/ar/:path*",
      "destination": "/:path*?lang=ar",
      "permanent": true
    },
    {
      "source": "/zh/:path*",
      "destination": "/:path*?lang=zh",
      "permanent": true
    },
    {
      "source": "/ja/:path*",
      "destination": "/:path*?lang=ja",
      "permanent": true
    },
    {
      "source": "/es/:path*",
      "destination": "/:path*?lang=es",
      "permanent": true
    },
    {
      "source": "/fr/:path*",
      "destination": "/:path*?lang=fr",
      "permanent": true
    },
    {
      "source": "/ko/:path*",
      "destination": "/:path*?lang=ko",
      "permanent": true
    },
    {
      "source": "/id",
      "destination": "/?lang=id",
      "permanent": true
    },
    {
      "source": "/eng",
      "destination": "/?lang=en",
      "permanent": true
    },
    {
      "source": "/ar",
      "destination": "/?lang=ar",
      "permanent": true
    },
    {
      "source": "/zh",
      "destination": "/?lang=zh",
      "permanent": true
    },
    {
      "source": "/ja",
      "destination": "/?lang=ja",
      "permanent": true
    },
    {
      "source": "/es",
      "destination": "/?lang=es",
      "permanent": true
    },
    {
      "source": "/fr",
      "destination": "/?lang=fr",
      "permanent": true
    },
    {
      "source": "/ko",
      "destination": "/?lang=ko",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/blog/:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i)(googlebot|bingbot|duckduckbot|yandexbot|baiduspider|semrushbot|mj12bot|facebookexternalhit|linkedinbot|slackbot|telegrambot|twitterbot|ahrefsbot|gptbot|anthropic-ai|claudebot|petalbot|pinterestbot)"
        }
      ],
      "destination": "/blog/:slug/index.html"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.(?:jpg|jpeg|png|gif|webp|svg|ico|woff|woff2|ttf|eot|otf)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.(?:js|css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.pdf",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
